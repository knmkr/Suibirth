<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LocActivity">

    <TextView android:text="Results" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@color/black_overlay"
        android:id="@+id/titleView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/titleView"
        android:id="@+id/line1">
        <ImageView
            android:id="@+id/image1"
            android:src="@drawable/r0"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="70"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/line1"
        android:id="@+id/line2">
        <ImageView
            android:id="@+id/image2"
            android:src="@drawable/r1"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="25"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/line2"
        android:id="@+id/line3">
        <ImageView
            android:id="@+id/image3"
            android:src="@drawable/r3"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="65"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/line3">
        <ImageView
            android:id="@+id/image4"
            android:src="@drawable/r4"
            android:layout_width="50dp"
            android:layout_height="70dp" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="65"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView android:text="“Ok google, tell me a joke”" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:textSize="22sp"
        android:textColor="@color/black_overlay"
        android:id="@+id/explainView" />

    <TextView android:text="72.8" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/explainView"
        android:textSize="48sp"
        android:textColor="@color/primary_dark"
        android:fontFamily="monospace"
        android:id="@+id/textView" />
</RelativeLayout>
